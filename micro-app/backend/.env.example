# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ========================================
# Database Configuration (MySQL)
# ========================================
DB_HOST=your-azure-mysql-server.mysql.database.azure.com
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_password_here
DB_DATABASE=micro_app

# Database Connection Pool (Production)
DB_POOL_SIZE=10

# Database SSL Configuration (Azure requires SSL)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true

# ========================================
# JWT Authentication
# ========================================
# CRITICAL: Generate a strong secret key for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRATION=1d

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://your-frontend-domain.azurewebsites.net

# ========================================
# Logging & Monitoring (Optional)
# ========================================
# LOG_LEVEL=error,warn,log

# ========================================
# Azure-specific Configuration (Optional)
# ========================================
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_STORAGE_CONTAINER_NAME=documents

# ========================================
# Email Configuration (Optional - for notifications)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@yourdomain.com

# ========================================
# Rate Limiting (Optional - for API protection)
# ========================================
# RATE_LIMIT_TTL=60
# RATE_LIMIT_MAX=100

# ========================================
# Security Headers (Optional)
# ========================================
# HELMET_ENABLED=true
